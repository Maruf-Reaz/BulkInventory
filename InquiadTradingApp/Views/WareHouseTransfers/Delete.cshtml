@model InquiadTradingApp.Models.WareHouseTransfer
@{
    ViewData["Title"] = "Delete";
}
<div class="container-fluid mt-4">
    <div class="card mb-4 animated fadeIn">
        <div class="card-header">
            <h3 class="text-danger mb-0">Confirm Delete</h3>
            <div class="col text-right">
                <a asp-action="Index" class="btn btn-back">Back</a>
            </div>
        </div>

        <div class="card-body">
            <div class="row">


                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Purchase Vouchar No</label>
                        <input asp-for="Purchase.VoucharNo" class="form-control" disabled />
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Transaction No</label>
                        <input asp-for="TransactionNo" class="form-control" disabled />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Date</label>
                        <input asp-for="TransferDate" class="form-control" disabled value="@String.Format("{0:dd-MM-yyyy}", Model.TransferDate)" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">From</label>
                        <input asp-for="Purchase.WareHouse.Name" class="form-control" disabled />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">To</label>
                        <input asp-for="ToWareHouse.Name" class="form-control" disabled />
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Product</label>
                        <input asp-for="Purchase.Product.Name" class="form-control" disabled />
                    </div>
                </div>



                <div class="col-md-2">
                    <div class="form-group">
                        <label class="control-label">Pack Amount</label>
                        <input asp-for="TransferAmountPackSize" class="form-control" disabled />
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label class="control-label">Pack Size</label>
                        <input asp-for="Purchase.PackSize.Name" class="form-control" disabled />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Amount in Ton(s)</label>
                        <input asp-for="TransferAmountInTons" class="form-control" disabled />
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Remarks</label>
                        <input asp-for="Remarks" class="form-control" disabled />
                    </div>
                </div>

                <div class="col-md-12">
                    <form class="delete-form" asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="button" value="Delete" class="btn btn-danger delete-button mt-2" />
                    </form>
                </div>



            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('input.delete-button').click(function () {
                $.confirm({
                    icon: 'fa fa-trash',
                    theme: 'modern',
                    animation: 'zoom',
                    closeAnimation: 'zoom',
                    backgroundDismiss: true,
                    backgroundDismissAnimation: 'shake',
                    closeIcon: true,
                    html: true,
                    title: 'Confirmation!',
                    content: 'This cannot be undone.',
                    backgroundDismiss: true,
                    typeAnimated: true,
                    smoothContent: true,
                    type: 'red',
                    buttons: {
                        delete: {
                            text: 'Delete',
                            btnClass: 'btn-danger',
                            action: function () {
                                $(".delete-form").submit();
                            },
                        },
                        cancel: {
                            text: 'Cancel',
                            btnClass: 'btn-success',
                            action: function () {

                            },
                        },
                    }
                });
            });
        });
    </script>
}

