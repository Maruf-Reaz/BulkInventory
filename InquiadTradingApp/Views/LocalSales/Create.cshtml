@model InquiadTradingApp.Models.LocalSale


@{
    ViewData["Title"] = "Local Sale";
}

@section Css {
    <link asp-append-version="true" type="text/css" rel="stylesheet" href="~/vendor/select2/select2.min.css" />
}

@section Sole {
    <style>
        .select2-container .select2-selection {
            padding: 7px 12px 4px;
            height: 40px;
            font-size: .9125rem;
            background: #fff url('data:image/png;base64,') no-repeat right 0px center;
        }
    </style>
}

<div class="container-fluid mt-4">
    <div class="card mb-4 animated fadeIn">
        <div class="card-header p-3">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="mb-0 skewed skewed-yellow text-dark d-inline-block text-uppercase ls-1">Local Sale</h3>
                </div>
                <div class="col text-right">
                    <a asp-action="Index" class="btn btn-back">Back</a>
                </div>
            </div>
        </div>
        <div class="card-body p-3">
            <form asp-action="Create" id="warehouseTransferForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">

                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase ">Date</label>
                            <input readonly name="SaleDate" id="SaleDate" class="form-control  datepicker" />
                            <span asp-validation-for="SaleDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Purchase Vouchar No</label>
                            <select asp-for="PurchaseId" id="purchaseId" class="form-control" data-toggle="select" asp-items="ViewBag.PurchaseId"></select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase ">Client Name</label>
                            <input asp-for="ClientName" class="form-control " />
                            <span asp-validation-for="ClientName" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Current W.H.</label>
                            <input readonly class="form-control " id="currentWHName" />
                            <input class="form-control " hidden id="currentWHId" />
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Product Name</label>
                            <input readonly class="form-control " id="productName" />
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Stock Amount (Pack)</label>
                            <input readonly class="form-control variableAmount" id="packAmount" />
                            <input hidden class="form-control variableAmount" id="packSizeId" />

                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Pack Size</label>

                            <input class="form-control" readonly id="packSizeName" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Stock Amount (Ton)</label>
                            <input readonly class="form-control" id="tonAmount" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase ">Sale Amount (Pack)</label>
                            <input asp-for="PackAmount" class="form-control " id="salePackAmount" />
                            <span asp-validation-for="PackAmount" class="text-danger"></span>
                        </div>
                    </div>



                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Amount (tk)</label>
                            <input asp-for="Amount" class="form-control" id="tonAmount" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Remarks</label>
                            <input asp-for="Remarks" class="form-control" id="tonAmount" />
                            <span asp-validation-for="Remarks" class="text-danger"></span>
                        </div>
                    </div>



                    <div class="col-lg-12">
                        <div class="form-group mb-0">
                            <input type="button" id="submitButton" value="Save" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script asp-append-version="true" type="text/javascript" src="~/vendor/select2/select2.min.js"></script>
    <script src="~/vendor/bootstrap-datepicker/bootstrap-datepicker.min.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            var purchaseId = $("#purchaseId").val();
                var url1 = '@Url.Action("GetPurchaseForTransferById", "Products")';
                $.ajax({
                    type: "POST",
                    dataType: 'json',
                    url: url1,
                    data: {
                        id: purchaseId,
                    },
                    cache: false,

                    success: function (result) {
                        $("#productName").val(result.productName);
                        $("#packSizeId").val(result.packSizeId);
                        $("#packSizeName").val(result.packSizeName);
                        $("#currentWHName").val(result.packSizeName);
                        $("#currentWHId").val(result.wareHouseId);
                        $("#currentWHName").val(result.wareHouseName);
                        $("#packAmount").val(result.currentStockPack);
                        $("#tonAmount").val(result.currentStockTon);
                    }
                });

            $("#submitButton").on('click', function () {
                var packAmount = $('#packAmount').val();
                var salePackAmount = $('#salePackAmount').val();

                if (eval(packAmount) < eval(salePackAmount)) {
                    $.notify({
                        title: 'Prompt!',
                        icon: 'fa fa-times',
                        html: true,
                        message: 'Sale Amount can not be more than stock amount!'
                    },
                        {
                            type: 'warning',
                            animate: {
                                enter: 'animated fadeInDown'
                            },
                            placement: {
                                from: "top",
                                align: "center"
                            },
                            spacing: 10,
                            z_index: 1031,
                            delay: 1000,
                            template: '<div data-notify="container" class="alert alert-dismissible alert-{0} alert-notify" role="alert"><span class="alert-icon" data-notify="icon"></span> <div class="alert-text"</div> <span class="alert-title" data-notify="title">{1}</span> <span data-notify="message">{2}</span></div><button type="button" class="close" data-notify="dismiss" aria-label="Close"><span aria-hidden="true">&times;</span></button></div>'
                        });
                }
                else {

                    $("#warehouseTransferForm").submit();
                }
            });
            $("#purchaseId").on('change', function () {
               var purchaseId = $("#purchaseId").val();
                var url1 = '@Url.Action("GetPurchaseForTransferById", "Products")';
                $.ajax({
                    type: "POST",
                    dataType: 'json',
                    url: url1,
                    data: {
                        id: purchaseId,
                    },
                    cache: false,

                    success: function (result) {
                        $("#packSizeId").val(result.packSizeId);
                        $("#packSizeName").val(result.packSizeName);
                        $("#currentWHName").val(result.packSizeName);
                        $("#currentWHId").val(result.wareHouseId);
                        $("#currentWHName").val(result.wareHouseName);
                        $("#packAmount").val(result.currentStockPack);
                        $("#tonAmount").val(result.currentStockTon);
                    }
                });
            });

        });


    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

