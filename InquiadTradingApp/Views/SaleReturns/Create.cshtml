@model InquiadTradingApp.Models.SaleReturn


@{
    ViewData["Title"] = "Sale Return";
}

@section Css {
    <link asp-append-version="true" type="text/css" rel="stylesheet" href="~/vendor/select2/select2.min.css" />
}

@section Sole {
    <style>
        .select2-container .select2-selection {
            padding: 7px 12px 4px;
            height: 40px;
            font-size: .9125rem;
            background: #fff url('data:image/png;base64,') no-repeat right 0px center;
        }
    </style>
}

<div class="container-fluid mt-4">
    <div class="card mb-4 animated fadeIn">
        <div class="card-header p-3">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="mb-0 skewed skewed-yellow text-dark d-inline-block text-uppercase ls-1">Sale Return</h3>
                </div>
                <div class="col text-right">
                    <a asp-action="Index" class="btn btn-back">Back</a>
                </div>
            </div>
        </div>
        <div class="card-body p-3">
            <form asp-action="Create" id="saleReturnForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">

                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Purchase Vouchar No</label>
                            <input class="form-control" value="@ViewBag.Sale.VoucharNo" readonly />
                            <input asp-for="SaleId" hidden class="form-control" value="@ViewBag.Sale.Id" />
                        </div>
                    </div>


                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Return Date</label>
                            <input readonly name="ReturnDate" id="ReturnDate" class="form-control datepicker" />
                            <span asp-validation-for="ReturnDate" class="text-danger"></span>
                        </div>
                    </div>



                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Product Name</label>
                            <input readonly value="@ViewBag.Sale.Purchase.Product.Name" class="form-control" />
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Sale Amount</label>
                            <input readonly class="form-control" value="@ViewBag.Sale.PackAmount  @ViewBag.Sale.Purchase.PackSize.Name Packs (@ViewBag.Sale.TonAmount) Tons" />
                        </div>
                    </div>


                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Pack Amount</label>
                            <input asp-for="PackAmount" class="form-control variableAmount" id="packAmount" />
                            <input class="form-control" hidden value="@ViewBag.Sale.PackAmount" id="packAmountHidden" />

                            <span asp-validation-for="PackAmount" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Pack Size</label>
                            <input readonly class="form-control" id="packSizeName" value="@ViewBag.Sale.Purchase.PackSize.Name" />
                            <input class="form-control" hidden id="packSizeId" value="@ViewBag.Sale.Purchase.PackSize.Id" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Amount in Ton(s)</label>
                            <input asp-for="TonAmount" class="form-control" id="tonAmount" />
                            <input class="form-control" hidden id="tonAmountHidden" value="@ViewBag.Sale.TonAmount"  />
                            <span asp-validation-for="TonAmount" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Total Amount (tk)</label>
                            <input asp-for="Amount" class="form-control" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Remarks</label>
                            <input asp-for="Remarks" class="form-control" />
                            <span asp-validation-for="Remarks" class="text-danger"></span>
                        </div>
                    </div>



                    <div class="col-lg-12">
                        <div class="form-group mb-0">
                            <input type="button" id="submitButton" value="Save" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script asp-append-version="true" type="text/javascript" src="~/vendor/select2/select2.min.js"></script>
    <script src="~/vendor/bootstrap-datepicker/bootstrap-datepicker.min.js" asp-append-version="true"></script>


    <script>
        $(document).ready(function () {

            
            $("#submitButton").on('click', function () {
                var packAmountHidden = $('#packAmountHidden').val();
                var tonAmountHidden = $('#tonAmountHidden').val();
                var packAmount = $('#packAmount').val();
                var tonAmount = $('#tonAmount').val();

                if (eval(tonAmountHidden) < eval(tonAmount) && eval(packAmountHidden) < eval(packAmount)){
                    $.notify({
                        title: 'Prompt!',
                        icon: 'fa fa-times',
                        html: true,
                        message: 'Return amount can not be more than Sale amount'
                    },
                        {
                            type: 'warning',
                            animate: {
                                enter: 'animated fadeInDown'
                            },
                            placement: {
                                from: "top",
                                align: "center"
                            },
                            spacing: 10,
                            z_index: 1031,
                            delay: 1000,
                            template: '<div data-notify="container" class="alert alert-dismissible alert-{0} alert-notify" role="alert"><span class="alert-icon" data-notify="icon"></span> <div class="alert-text"</div> <span class="alert-title" data-notify="title">{1}</span> <span data-notify="message">{2}</span></div><button type="button" class="close" data-notify="dismiss" aria-label="Close"><span aria-hidden="true">&times;</span></button></div>'
                        });
                }
                else {

                    $("#saleReturnForm").submit();
                }
            });

            


             $("#tonAmount").on('change', function () {
                var packSizeId = $("#packSizeId").val();
                var packAmount = $("#packAmount");
                var tonAmount = $("#tonAmount");

                var url1 = '@Url.Action("GetPackSizeById", "PackSizes")';
                $.ajax({
                    type: "POST",
                    dataType: 'json',
                    url: url1,
                    data: {
                        id: packSizeId,
                    },
                    cache: false,

                    success: function (result) {
                        var tempPackAmount = (eval(tonAmount.val()) * 1000) / eval(result.totalKilo);;

                        packAmount.val(tempPackAmount)
                    }
                });
            });




            $("#packAmount").on('change', function () {
                var packSizeId = $("#packSizeId").val();
                var packAmount = $("#packAmount");
                var tonAmount = $("#tonAmount");

                var url1 = '@Url.Action("GetPackSizeById", "PackSizes")';
                $.ajax({
                    type: "POST",
                    dataType: 'json',
                    url: url1,
                    data: {
                        id: packSizeId,
                    },
                    cache: false,

                    success: function (result) {
                        var  tempTonAmount = (eval(packAmount.val()) * result.totalKilo) / 1000;
                        tonAmount.val(tempTonAmount)
                    }
                });
            });
            
        });


    </script>




    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

